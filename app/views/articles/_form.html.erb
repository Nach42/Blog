<%= form_for(@article) do |f| %>
	<% @article.errors.full_messages.each do |message| %>
		<div class="be-red white top-space">
			<%= message %>
		</div>
	<% end %>

	<div class="field">
		<%= f.text_field :title, placeholder: "Título", class:"form-control" %>
	</div>
	<div class="field">
		<%= f.text_area :body, placeholder: "Escribe aquí el artículo", class:"form-control", style:"height:200px" %>
	</div> 
	<div class="field">
		<%= f.submit "Publicar", class:"btn be-red white" %> 
	
<% end %>